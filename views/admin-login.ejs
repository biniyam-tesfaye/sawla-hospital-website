<%- include('partials/header') %>

<section class="page-hero center">
  <div class="container">
    <p class="eyebrow">Admin Access</p>
    <h1>Secure login for authorised staff.</h1>
    <p>
      Please sign in to view appointment requests. This portal is restricted to Sawla General Hospital management personnel.
    </p>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="card admin-login-card">
      <form action="/admin/login" method="POST" class="form">
        <div class="form-group">
          <label for="adminUsername">Username</label>
          <input type="text" id="adminUsername" name="username" placeholder="Enter username" required />
        </div>
        <div class="form-group">
          <label for="adminPassword">Password</label>
          <input type="password" id="adminPassword" name="password" placeholder="Enter password" required />
        </div>
        <% if (typeof error !== 'undefined' && error) { %>
          <p class="form-message error"><%= error %></p>
        <% } %>
        <button type="submit" class="btn-primary full-width">Sign in</button>
      </form>
      <p class="admin-note">
        Need help? Contact the IT desk to reset your admin credentials.
      </p>
    </div>
  </div>
</section>

<%- include('partials/footer') %>



