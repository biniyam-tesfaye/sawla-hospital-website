<section class="section appointment" id="book-appointment">
  <div class="container appointment-grid">
    <div class="appointment-text fade-in-up">
      <p class="eyebrow">Plan your visit</p>
      <h2>Book an appointment in minutes.</h2>
      <p>
        Share a few details and our team will call or email to confirm your appointment and answer any questions.
      </p>
      <ul class="checklist">
        <li>General consultation</li>
        <li>Specialist review</li>
        <li>Antenatal clinic</li>
        <li>Laboratory & imaging</li>
      </ul>
    </div>
    <div class="appointment-form-card fade-in-up">
      <form id="appointmentForm" class="form">
        <div class="form-row">
          <div class="form-group">
            <label for="apName">Full Name *</label>
            <input type="text" id="apName" name="name" placeholder="Enter your full name" required />
          </div>
          <div class="form-group">
            <label for="apPhone">Phone Number *</label>
            <input type="tel" id="apPhone" name="phone" placeholder="+233..." required />
          </div>
        </div>
        <div class="form-row">
          <div class="form-group">
            <label for="apEmail">Email</label>
            <input type="email" id="apEmail" name="email" placeholder="you@example.com" />
          </div>
          <div class="form-group">
            <label for="apDate">Preferred Date *</label>
            <input type="date" id="apDate" name="date" required />
          </div>
        </div>
        <div class="form-row">
          <div class="form-group">
            <label for="apDepartment">Department *</label>
            <select id="apDepartment" name="department" required>
              <option value="">Select department</option>
              <option value="Emergency">Emergency</option>
              <option value="General Medicine">General Medicine</option>
              <option value="Paediatrics">Paediatrics</option>
              <option value="Obstetrics & Gynaecology">Obstetrics & Gynaecology</option>
              <option value="Surgery">Surgery</option>
            </select>
          </div>
          <div class="form-group">
            <label for="apDoctor">Preferred Doctor</label>
            <select id="apDoctor" name="doctor">
              <option value="">No preference</option>
            </select>
          </div>
        </div>
        <div class="form-group">
          <label for="apMessage">Additional Details</label>
          <textarea id="apMessage" name="message" rows="3" placeholder="Describe your concern (optional)"></textarea>
        </div>
        <div class="form-actions">
          <button type="submit" class="btn-primary full-width">Request Appointment</button>
          <p class="form-message" id="appointmentMessage"></p>
        </div>
      </form>
    </div>
  </div>
</section>

